<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout     android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_marginStart="12dp"
            android:text="Welcome To Main Screen"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/df_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dialogFragment"
            android:padding="4dp"
            android:layout_marginTop="12dp"
            android:textAllCaps="false"
            android:textSize="@dimen/primary_text_dim"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/model_bottom_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Model Bottom Sheet"
            android:padding="4dp"
            android:layout_marginTop="12dp"
            android:textAllCaps="false"
            android:textSize="@dimen/primary_text_dim"
            app:layout_constraintEnd_toEndOf="@+id/df_btn"
            app:layout_constraintStart_toStartOf="@+id/df_btn"
            app:layout_constraintTop_toBottomOf="@+id/btm_sheet_btn" />

        <TextView
            android:id="@+id/btm_sheet_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bottom Sheet"
            android:padding="4dp"
            android:textAllCaps="false"
            android:layout_marginTop="12dp"
            android:textSize="@dimen/primary_text_dim"
            app:layout_constraintEnd_toEndOf="@+id/model_bottom_sheet"
            app:layout_constraintStart_toStartOf="@+id/model_bottom_sheet"
            app:layout_constraintTop_toBottomOf="@+id/df_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>
